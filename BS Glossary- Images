<!-- IMAGE GALLERY
You can also use Bootstrap's grid system in conjunction with the .thumbnail class to create an image gallery.
-->

<div class="row">
    <div class="col-md-4">
      <div class="thumbnail">
        <a href="image location.jpg" target="_blank">
          <img src="image location.jpg" alt="Description" style="width:100%">
          <div class="caption">
            <p>Caption text under the images.</p>
          </div>
        </a>
      </div>
    </div>
    <div class="col-md-4">
      <div class="thumbnail">
        <a href="image location.jpg" target="_blank">
          <img src="image location.jpg" alt="Description" style="width:100%">
          <div class="caption">
            <p>Caption text under the images.</p>
          </div>
        </a>
      </div>
    </div>
    <div class="col-md-4">
      <div class="thumbnail">
        <a href="image location.jpg" target="_blank">
          <img src="image location.jpg" alt="Description" style="width:100%">
          <div class="caption">
            <p>Caption text under the images.</p>
          </div>
        </a>
      </div>
    </div>
  </div>

